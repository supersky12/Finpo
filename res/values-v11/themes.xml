<resources>
    <style name="CustomLightTheme" parent="@android:style/Theme.Holo.Light">
         <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/mainbackground</item>
        <item name="titleReferenceValue">@color/color_title_bg</item>
        <item name="normalTextColorReferenceValue">@color/black</item>
        <item name="listViewItemReferenceValue">@drawable/button07_bg</item>
         <item name="sdlDialogStyle">@style/DialogStyleLight</item>
         <item name="mainBackgroundReferenceValue">@color/mainbackground</item>
    </style>
    
    <style name="SDL.Progress" parent="@android:style/Widget.Holo.ProgressBar">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">0dp</item>
		<item name="android:layout_marginLeft">@dimen/grid_4</item>
		<item name="android:layout_marginTop">@dimen/grid_4</item>
		<item name="android:layout_marginBottom">@dimen/grid_4</item>
	</style>
</resources>