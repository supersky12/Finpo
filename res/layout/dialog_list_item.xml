<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lay_button"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/button07_bg" >

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="31dip"
            android:layout_height="39dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:layout_toRightOf="@id/iconImageView"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="4444444"
                android:textColor="@color/black"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/tv_second_line_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/gray_tip_color"
                android:textSize="16dip"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/checked"
             />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <View
            android:id="@+id/v_line"
            android:layout_width="31dip"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_marginLeft="12dip"
            android:layout_weight="1"
            android:background="@drawable/line" />
    </LinearLayout>

</LinearLayout>