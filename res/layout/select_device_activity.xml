<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_02"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_height="@dimen/title_bar_height"
            android:layout_width="fill_parent" >

            <TextView
                android:id="@+id/btn_back"
                style="@style/TitleLeftButtonStyle"
                android:background="@drawable/back_blue" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/select_device_tip"
            android:textColor="@color/white"
            android:textSize="20dip" >
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="20dip"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/btn_select_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/iv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:src="@drawable/icon_select_device" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_device"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/device_name"
                    android:textColor="@color/white"
                    android:textSize="18dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/device_desc"
                    android:textColor="@color/white"
                    android:textSize="15dip" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_buy"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_gravity="bottom"
        android:background="#81cfe2"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/iv_buy_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:src="@drawable/buy_device" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/iv_buy_device"
            android:text="@string/buy_device_attention"
            android:textColor="@color/white"
            android:textSize="18dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:drawablePadding="3dip"
            android:drawableRight="@drawable/arrow_right"
            android:text="@string/buy_device"
            android:textColor="@color/white"
            android:textSize="15dip" />
    </RelativeLayout>

</FrameLayout>