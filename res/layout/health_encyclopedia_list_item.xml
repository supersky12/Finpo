<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dip"
    android:paddingLeft="5dip"
    android:paddingRight="10dip"
    android:paddingTop="8dip" >

    <com.yujunkang.fangxinbao.control.NetworkedCacheableImageView
        android:id="@+id/iv_icon"
        android:layout_width="120dip"
        android:layout_height="80dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:src="@drawable/baby_no_photo" />

    <TextView
        android:id="@+id/tv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_icon"
        android:text="@string/baby_photo_label"
        android:textColor="?attr/normalTextColorReferenceValue"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/tv_info_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_info_title"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@id/iv_icon"
        android:text=""
        android:textColor="@color/gray_tip_color"
        android:textSize="16dip" />

</RelativeLayout>