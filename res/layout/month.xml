<?xml version="1.0" encoding="utf-8"?>
<com.yujunkang.fangxinbao.control.calendar.MonthView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        style="@style/CalendarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_month_title_bottommargin"
        android:layout_marginTop="@dimen/calendar_month_topmargin"
        android:gravity="center_horizontal"
        android:textColor="@color/calendar_text_title"
        android:visibility="gone" />

    <com.yujunkang.fangxinbao.control.calendar.CalendarGridView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yujunkang.fangxinbao.control.calendar.CalendarRowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b2d1ee"
            android:paddingBottom="@dimen/calendar_day_headers_paddingbottom" >

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:textColor="@color/white" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:textColor="@color/white" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:textColor="@color/white" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:textColor="@color/white" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:textColor="@color/white" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:textColor="@color/white" />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:textColor="@color/white" />
        </com.yujunkang.fangxinbao.control.calendar.CalendarRowView>

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />
    </com.yujunkang.fangxinbao.control.calendar.CalendarGridView>

</com.yujunkang.fangxinbao.control.calendar.MonthView>